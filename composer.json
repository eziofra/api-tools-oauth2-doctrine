{
    "name": "eziofra/api-tools-oauth2-doctrine",
    "description": "Doctrine OAuth2 Server Adapter for Apigility",
    "license": "MIT",
    "keywords": [
        "oauth2",
        "doctrine",
        "api-tools",
        "laminas"
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/eziofra/api-tools-oauth2-doctrine"
        }
    ],
    "require": {
        "php": ">=7.1",
        "laminas-api-tools/api-tools-oauth2": "^1.4",
        "doctrine/orm": "^2.5.11",
        "doctrine/doctrine-module": "^1.2 || ^2.1",
        "doctrine/doctrine-orm-module": "^1.1.5 || ^2.1",
        "laminas-api-tools/api-tools-mvc-auth": "^1.4.3",
        "laminas/laminas-mvc": "^3.0",
        "laminas/laminas-config": "^2.6 || ^3.0",
        "laminas/laminas-modulemanager": "^2.0",
        "laminas/laminas-servicemanager": "^3.0",
        "laminas/laminas-i18n": "^2.7",
        "laminas/laminas-dependency-plugin": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "laminas/laminas-form": "^2.10",
        "laminas/laminas-loader": "^2.4",
        "laminas/laminas-log": "^2.9",
        "laminas/laminas-serializer": "^2.7",
        "laminas/laminas-test": "^3.1",
        "laminas/laminas-authentication": "^2.5",
        "laminas/laminas-eventmanager": "^3.2",
        "mockery/mockery": "^0.9.5",
        "satooshi/php-coveralls": "^1.0",
        "api-skeletons/coding-standard": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Laminas\\ApiTools\\OAuth2\\Doctrine\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ZFTest\\OAuth2\\Doctrine\\": "test/"
        }
    },
    "extra": {
        "zf": {
            "component": "Laminas\\ApiTools\\OAuth2\\Doctrine",
            "config-provider": "Laminas\\ApiTools\\OAuth2\\Doctrine\\ConfigProvider"
        }
    },
    "suggest": {
        "api-skeletons/api-tools-oauth2-doctrine-permissions-acl": "Access Control Lists for api-tools-oauth2-doctrine",
        "bushbaby/api-tools-oauth2-doctrine-mutatetablenames": "Allows configuration of the table names that this module uses"
    }
}
